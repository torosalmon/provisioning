  "#18": "インラインスタイルを禁止する",
  "inline-style-disabled": false,

  "#19": "インラインスクリプトを禁止する",
  "inline-script-disabled": true,

  "#20": "インデントにタブとスペースが混在している場合に警告する",
  "space-tab-mixed-disabled": "space2",

  "#21": "id、class名に「ad」が含まれている場合に警告する（adblockからブロッキングされる恐れがある）",
  "id-class-ad-disabled": true,

  "#22": "パスは絶対パスか相対パスか",
  "href-abs-or-rel": false,

  "#23": "属性内の安全でない文字列について警告",
  "attr-unsafe-chars": true

