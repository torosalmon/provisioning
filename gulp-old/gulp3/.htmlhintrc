  "#8": "「<br />」記法のみ",
  "tag-self-close": false,

  "#9": "タグ文字を文字列として使う場合は実体参照を用いる",
  "spec-char-escape": true,

  "#10": "ページ内のID重複",
  "id-unique": true,

  "#11": "src属性が空の場合",
  "src-not-empty": true,

