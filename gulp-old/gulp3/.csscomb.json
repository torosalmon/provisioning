{

  "#1": "インデント文字",
  "// block-indent": "  ",

  "#2": "Tabをスペースに置換する",
  "tab-size": true,

  "#3": "行末尾の空白を除去する",
  "strip-spaces": true,

  "#4": "EOFに改行を挿入",
  "eof-newline": true,

  "#5": "空セレクターを除去する",
  "// remove-empty-rulesets": true,

  "#6": "条件セレクター囲い文字",
  "quotes": "single",

  "#7": "「ul > li」セレクター結合文字間のインデント",
  "space-before-combinator": " ",
  "space-after-combinator": " ",

  "#8": "セレクター複数指定時「,」前後のインデント",
  "// space-before-selector-delimiter": "",
  "// space-after-selector-delimiter": "\n",

  "#9": "「{」前後のインデント",
  "// space-before-opening-brace": " ",
  "// space-after-opening-brace": "\n",

  "#10": "「}」前のインデント",
  "// space-before-closing-brace": "\n",

  "#11": "プロパティ「:」前後のインデント",
  "space-before-colon": "",
  "space-after-colon": " ",

  "#12": "プロパティ「;」前の余分な空白を除去する",
  "unitless-zero": true,

  "#13": "プロパティ末尾にセミコロンを付加",
  "always-semicolon": true,

  "#14": "プロパティ「;」後のインデント",
  "// space-between-declarations": "\n",

  "#15": "セレクタータグ名を小文字に統一",
  "element-case": "lower",

  "#16": "カラーコードを小文字に統一",
  "color-case": "lower",

  "#17": "カラーコードを略式記法にする",
  "color-shorthand": true,

  "#18": "0を省略",
  "leading-zero": false,

  "#19": "ベンダープレフィクスはプロパティ名が揃うようにインデントする",
  "vendor-prefix-align": true,

  "#20": "プロパティ順序をアルファベット順にする",
